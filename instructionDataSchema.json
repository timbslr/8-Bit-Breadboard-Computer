{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": "string",
    "instructions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2
          },
          "type": {
            "type": "string",
            "pattern": "^(REAL|PSEUDO)$"
          },
          "opcode": {
            "type": "string",
            "minLength": 8,
            "maxLength": 8,
            "pattern": "(0|1){8}"
          },
          "microinstructions": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^(IE_MAR_H|IE_PC_H|IE_PC_L|RSC|IE_A|IE_SP_H|IE_SP_L|IE_PRB|IE_MAR_L|CE|IE_F|IE_B|IE_X|LCD_RS|LCD_E|IE_7SD|MEM_WE|ALU_BOP_AND|ALU_BOP_OR|ALU_BOP_XOR|ALU_BOP_NOT|ALU_BOP_SHL|ALU_BOP_SLR|ALU_BOP_SAR|ALU_BOP_ROR|ALU_SRC|ALU_CIN|ALU_AOP_ADD|ALU_AOP_SUB|IE_IR|OE_X|OE_ALU|OE_PC_L|OE_PC_H|OE_F|OE_A|OE_T|OE_B|OE_SP_L|OE_SP_H|OE_IR|OE_PRB|IE_T|MEM_EN_IO|INC_X|DEC_X)$"
              }
            },
            "maxItems": 16
          },
          "mappedInstructions": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5
            },
            "minItems": 1
          },
          "group": {
            "type": "string",
            "pattern": "^(ALU|RM|IO|SYS|BJ)$"
          },
          "indexInGroup": {
            "type": "number"
          },
          "description": {
            "type": "string",
            "minLength": 5
          }
        },
        "required": [
          "name",
          "type",
          "opcode",
          "group",
          "indexInGroup",
          "description"
        ],
        "additionalProperties": false,
        "allOf": [
          {
            "if": {
              "properties": { "type": { "const": "REAL" } }
            },
            "then": {
              "required": ["microinstructions"],
              "not": { "required": ["mappedInstructions"] }
            }
          },
          {
            "if": {
              "properties": {
                "type": { "const": "PSEUDO" }
              }
            },
            "then": {
              "required": ["mappedInstructions"],
              "not": { "required": ["microinstructions"] }
            }
          }
        ]
      }
    }
  },
  "required": ["$schema", "instructions"],
  "additionalProperties": false
}
